<Window x:Class="RadarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radar Viewer" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Enter IP as number:" Margin="10" Width="200"/>
            <TextBox Name="IpInputTextBox" Width="200" Margin="10"/>
            <Button Content="Start radar" Width="200" Margin="10" Click="SetIpAddress_Click"/>
            <TextBlock Name="RadarStatusTextBlock" Text="Radar Status: Offline" Margin="10" Foreground="Red" Width="400"/>
            <Canvas Name="RadarCanvas" Width="400" Height="400" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
